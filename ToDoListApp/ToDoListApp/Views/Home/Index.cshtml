@model IEnumerable<ToDoListApp.Models.ToDoItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            IsComplete
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsComplete)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ToDoItemId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ToDoItemId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ToDoItemId })
        </td>
    </tr>
}

</table>
